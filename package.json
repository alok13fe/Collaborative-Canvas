{
  "name": "Excalidraw Clone",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start:excalidraw": "cd apps/excalidraw-frontend && pnpm start",
    "start:http-backend": "cd apps/http-backend && pnpm start",
    "start:ws-backend": "cd apps/ws-backend && pnpm start",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
